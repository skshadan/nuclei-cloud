# Nuclei Distributed Scanner Configuration
# IMPORTANT: Replace with your actual values

# DigitalOcean API Token (required for creating worker droplets)
# Get one at: https://cloud.digitalocean.com/account/api/tokens
DO_API_TOKEN=your_digitalocean_api_token_here

# Server Configuration
MAIN_SERVER_IP=your_server_external_ip
PORT=8080

# Redis Configuration
REDIS_URL=redis:6379
REDIS_PASSWORD=nuclei_redis_secure_2024

# Application Settings
GIN_MODE=release
LOG_LEVEL=info

# Worker Settings
AUTO_DESTROY=true
MAX_AGE_HOURS=2
MAX_WORKERS=10
WORKER_TIMEOUT=3600

# Security Settings
SESSION_SECRET=nuclei_session_secret_change_me

# Optional: Custom Nuclei Settings
NUCLEI_RATE_LIMIT=10
NUCLEI_TIMEOUT=30
NUCLEI_RETRIES=2
